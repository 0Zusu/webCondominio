<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default">
		<action name="pago"
			class="webCondominio.controller.ControllerPago">
			<result name="success" type="redirect">${urlPago}</result>
		</action>
	</package>

	<package name="pago" extends="json-default" namespace="/">
		<action name="getPagoAction"
			class="webCondominio.action.ActionPago">
			<result type="json" />
		</action>
	</package>

	<package name="residente" namespace="/residentes"
		extends="struts-default">
		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="webCondominio.controller.AuthenticationInterceptor" />
			<interceptor-stack name="secureStack">
				<interceptor-ref name="authenticationInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>

		</interceptors>

		<!-- <action name="login" class="webCondominio.controller.ControllerVistas"> 
			<result name="success">views/residentes.jsp</result> <result name="error" 
			type="redirectAction"> <param name="actionName">return</param> <param name="namespace">/</param> 
			</result> </action> -->

		<action name="login"
			class="webCondominio.controller.ControllerVistas">
			<result name="success" type="redirectAction">
				<param name="actionName">residente</param>
				<param name="namespace">/residentes</param>
			</result>
			<result name="input" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="logout"
			class="webCondominio.controller.LogoutAction">
			<result name="success" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="residente">
			<interceptor-ref name="secureStack" />
			<result>views/residentes.jsp</result>
			<result name="login" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="multa" class="webCondominio.action.ActionMulta">
			<interceptor-ref name="secureStack" />
			<result name="success">views/multas.jsp</result>
			<result name="login" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="reserva"
			class="webCondominio.controller.ControllerVistas" method="servicios">
			<interceptor-ref name="secureStack" />
			<result name="success">views/reservas.jsp</result>
			<result name="login" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="anuncio"
			class="webCondominio.action.ActionAnuncio">
			<interceptor-ref name="secureStack" />
			<result name="success">views/anuncios.jsp</result>
			<result name="login" type="redirectAction">
				<param name="actionName">return</param>
				<param name="namespace">/</param>
			</result>
		</action>




	</package>

	<package name="index" extends="struts-default" namespace="/">
		<action name="return">
			<result>index.jsp</result>
		</action>
	</package>


</struts>